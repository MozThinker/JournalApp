<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_margin="8dp"
    tools:context="com.mutombene.edson.journalapp.MainActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/cardview_light_background"/>



    <TextView
        android:id="@+id/journalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_alignTop="@id/circleView"
        android:layout_toRightOf="@id/circleView"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="18dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/journalCreatedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/01/1970"
        android:layout_marginTop="2dp"
        android:layout_below="@id/journalTitle"
        android:layout_alignLeft="@id/journalTitle"
        android:layout_alignStart="@id/journalTitle"
        android:textSize="12sp"/>




</RelativeLayout>